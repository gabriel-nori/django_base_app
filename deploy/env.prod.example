# Environment Configuration
ENV_NAME=PROD

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration (External PostgreSQL)
DB_NAME=db_name
DB_USER=postgres
DB_PASS=your-secure-db-password
DB_HOST=your-database-host.com  # External PostgreSQL host (e.g., localhost, AWS RDS, etc.)
DB_PORT=5432

# Redis Configuration (External Redis)
USE_REDIS_CACHE=true
REDIS_HOST=your-redis-host.com  # External Redis host (e.g., localhost, AWS ElastiCache, etc.)
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB_INDEX=1
REDIS_USE_SSL=false
REDIS_VALIDATE_CERT=false
# REDIS_SSL_CA_CERTS=/path/to/ca-certs  # Optional: SSL certificate path

# Application Settings
APP_NAME=app name
APP_DESCRIPTION=app description
PORT=8000

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Logging
LOG_LEVEL=info

